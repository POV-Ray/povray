	"CPLUSPLUS = g++" \
	"CFLAGS = -fPIC -O3 -DUSE_XSHM -DSOLARIS_2_4_BUG" \
	"CCFLAGS = $(CFLAGS)" \
	"MAKELIB = ../bin/mklib.sunos5" \
	"APP_LIB_DEPS = -lSM -lICE -lX11 -lXext -lXmu -lXi -lnsl -lsocket -lm"

